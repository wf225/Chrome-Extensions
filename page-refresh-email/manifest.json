{
    "manifest_version": 2,
    "name":    "Page Refresh and Email Notification",
    "version": "0.0.1",
    "background": {
        "persistent": false,
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["http://www.qjtra.com/*"],
        "js":      ["jquery.min.js", "content.js"]
    }],
    "browser_action": {
        // "default_popup": "popup.html",
        "default_title": "Page Refresh Email",
        "default_icon" : "icon.png"
    },
    "permissions": [
        "alarms",
        "tabs",
        // "storage",
        // "bookmarks",
        "activeTab"
    ]
}